package test1;

import java.util.Scanner;

public class BANK {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
        Scanner sc = new Scanner (System.in);
        
        int y;
        
        for (y=1; y<=4; y++) {
            System.out.print("PLEASE ENTER YOUR PIN NUMBER  : ");
            int Pin = sc.nextInt();
            
        int pin = 654321;
        	
        if (Pin==pin) {
        	System.out.print("YOUR PIN NUMBER IS CORRECT");
        break; }
        
        else {
        	System.out.print("YOUR PIN NUMBER IS WRONG !! PLEASE TRY AGAIN");
        }
        
        System.out.println();
        
        if (y>=4)
        	System.out.print("SORRY PIN NUMBER IS WRONG,PLEASE REFER TO THE CAUNTER");
        }
	}
}
